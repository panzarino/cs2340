<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs2340.gatech.edu.lab3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="cs2340.gatech.edu.lab3.controllers.CourseListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cs2340.gatech.edu.lab3.controllers.CourseDetailActivity"
            android:label="@string/title_course_detail"
            android:parentActivityName="cs2340.gatech.edu.lab3.controllers.CourseListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs2340.gatech.edu.lab3.controllers.CourseListActivity" />
        </activity>
        <activity
            android:name="cs2340.gatech.edu.lab3.controllers.EditStudentActivity"
            android:label="@string/title_activity_edit_student"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>